<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        @RenderBody()
    </div>

    <script src="@Url.Content("~/lib/jquery/jquery.js")"></script>
    <script src="@Url.Content("~/lib/signalr/jquery.signalR.js")"></script>
    <script src="http://localhost:64230/signalr/hubs"></script>
    
    <script>
        $(function () {
            hub = $.connection.Chat;


            hub.client.Receive = function (message) {
                $('body').append(message + '<br>');
            }

            $.connection.hub.url = 'http://localhost:64230/signalr';
            $.connection.hub.start({
                withCredentials: false
            }).done(function () {
                console.log('connection succeded!');
            });
        })
    </script>

    @RenderSection("scripts", false)
</body>
</html>
